<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx_title"
        android:text="buat baru"/-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cccccc"
        android:padding="3dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_marginBottom="@dimen/card_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Judul"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Judul iklan..."
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/edit_judul_iklan"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginBottom="@dimen/card_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Isi"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="30dp"
                    android:hint="Isi iklan..."
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:id="@+id/edit_isi_iklan"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginBottom="@dimen/card_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Kategori"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/spinner_jenis_iklan"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginBottom="@dimen/card_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Harga (Rp.)"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_harga"
                    android:hint="Harga..."
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginBottom="@dimen/card_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:padding="@dimen/item_space"
                    android:text="Ambil gambar"/>

                <!--Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_camera1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_custom"
                    android:text="Ambil Gambar"
                    android:drawableLeft="@drawable/ic_menu_camera"/-->

                <LinearLayout android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout android:layout_margin="@dimen/item_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/image_tiny"
                            android:layout_height="@dimen/image_tiny"
                            android:id="@+id/imageView"
                            android:layout_gravity="center"
                            android:background="#f0f0f0"
                            android:src="@mipmap/ic_noimage"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:id="@+id/tx_gambar1"/>

                    </LinearLayout>

                    <LinearLayout android:layout_margin="@dimen/item_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/image_tiny"
                            android:layout_height="@dimen/image_tiny"
                            android:id="@+id/imageView2"
                            android:layout_gravity="center"
                            android:background="#f0f0f0"
                            android:src="@mipmap/ic_noimage"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:id="@+id/tx_gambar2"/>

                    </LinearLayout>

                    <LinearLayout android:layout_margin="@dimen/item_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/image_tiny"
                            android:layout_height="@dimen/image_tiny"
                            android:id="@+id/imageView3"
                            android:layout_gravity="center"
                            android:background="#f0f0f0"
                            android:src="@mipmap/ic_noimage"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:id="@+id/tx_gambar3"/>

                    </LinearLayout>

                    <LinearLayout android:layout_margin="@dimen/item_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/image_tiny"
                            android:layout_height="@dimen/image_tiny"
                            android:id="@+id/imageView4"
                            android:layout_gravity="center"
                            android:background="#f0f0f0"
                            android:src="@mipmap/ic_noimage"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:id="@+id/tx_gambar4"/>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/item_space"
                    android:text="@string/take_pictures"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_space"
            android:layout_gravity="center"
            android:paddingHorizontal="35dp"
            android:paddingVertical="25dp"
            android:textColor="@color/colorWhite"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_custom"
            android:id="@+id/bt_post"
            android:text="Posting Iklan"
            android:drawableLeft="@drawable/ic_menu_send"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>